{%
  set classes = [
  node.bundle|clean_class,
  node.isPromoted() ? 'is-promoted',
  node.isSticky() ? 'is-sticky',
  not node.isPublished() ? 'is-unpublished',
  view_mode ? view_mode|clean_class,
]
%}
<div {{ attributes.addClass(classes) }}>
  <div class="entity-{{ view_mode|clean_class }}__image">
    {{ content.field_os2web_news_primaryimage }}
  </div>
  <div class="field--type-link">
    <a style="color: #333; text-decoration: none;" href="{{ url }}" aria-label="{{ 'Read more about' | trans }} {{ node.field_os2web_news_heading.value }}">
      <div class="entity-{{ view_mode|clean_class }}__body">
          <h2 style="font-size: 22px; margin: 0;">
            {{ node.field_os2web_news_heading.value }}
          </h2>
          <p style="margin:0;padding:0;font-size:16px;line-height:16px"> &nbsp;</p>
          <div style="color:#6c6c6c;text-transform:lowercase;font-size:16px;line-height:145%">{{ content.field_os2web_news_article_date }}</div>
          <p style="margin:0;padding:0;font-size:16px;line-height:16px"> &nbsp;</p>

          {% set text = content.field_os2web_news_description | render %}
          <div style="color:#333;font-size:16px;line-height:145%;font-family:Arial,sans-serif" class="field field--type-body">
            {{ text | striptags }}
          </div>
      </div>
    </a>
  </div>
 
</div>


