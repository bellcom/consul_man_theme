{#
/**
 * @file
 * Theme override for a breadcrumb trail.
 *
 * Available variables:
 * - breadcrumb: Breadcrumb trail items.
 */
#}
{% if breadcrumb %}
  <nav role="navigation" aria-labelledby="system-breadcrumb" class="d-print-none">
    <span id="system-breadcrumb" class="h2 visually-hidden">{{ 'Breadcrumb'|t }}</span>
    {% if breadcrumb|length == 1 %}
      <div class="breadcrumb breadcrumb-single">
        {% for item in breadcrumb %}
          {% if item.url %}
            <a href="{{ item.url }}">{{ item.text }}</a>
          {% else %}
            {{ item.text }}
          {% endif %}
        {% endfor %}
      </div>
    {% else %}
      <ol class="breadcrumb">
        {% for item in breadcrumb %}
          <li>
            {% if item.url %}
              <a href="{{ item.url }}">{{ item.text }}</a>
            {% else %}
              {{ item.text }}
            {% endif %}
          </li>    
        {% endfor %}
      </ol>
    {% endif %}
  </nav>
{% endif %}
